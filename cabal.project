packages: chainweb.cabal

package chainweb
    tests: True

package aeson
    flags: +cffi

package cryptonite
    flags: +support_pclmuldq

debug-info: True

source-repository-package
    type: git
    location: https://github.com/kadena-io/pact.git
    tag: 853d255202d590e133aed16ee8a117b55e9bc623

